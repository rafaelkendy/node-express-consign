{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "extends": "standard",
  "globals": {
    "__static": true
  },
  "rules": {
    "arrow-parens": 0,
    "generator-star-spacing": 0,
    "no-throw-literal": 0,
    "template-curly-spacing": ["error", "always"],
    "indent": ["error", 2, { "MemberExpression": 0 }],
    "no-labels": ["error", { "allowLoop": true }]
  }
}